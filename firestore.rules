service cloud.firestore {
  match /databases/{database}/documents {
		function isAuthenticated() {
      return request.auth.uid != null;
    }
    function isUserAuthenticated(uid) {
      return request.auth.uid == uid;
    }
    match /accounts/{uid} {
      allow create, read, update, delete: if isUserAuthenticated(uid);
    }
    match /positions/{position} {
      allow read, update: if isAuthenticated();
      allow create, delete: if false;
    }
    match /projects/{project} {
      allow read, update: if isAuthenticated();
      allow create, delete: if false;
    }
    match /tags/{tag} {
      allow create, read, update, delete: if isAuthenticated();
    }
    match /users/{uid} {
      allow read, update: if isAuthenticated();
      allow create, delete: if isUserAuthenticated(uid);
    }
  }
}
